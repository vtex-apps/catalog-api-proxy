{
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema",
  "vendor": "vtex",
  "name": "catalog-api-proxy",
  "version": "0.10.5-hkignore.14",
  "title": "Proxy to VTEX Catalog API that adds production cache headers",
  "credentialType": "absolute",
  "builders": {
    "node": "6.x",
    "docs": "0.x"
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "policies": [
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "/api/catalog_system/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.gocommerce.com",
        "path": "/{{account}}/search/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.gocommerce.com",
        "path": "/{{account}}/search/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "*",
        "path": "/*"
      }
    },
    {
      "name": "colossus-write-logs"
    }
  ],
  "settingsSchema": {
    "title": "App config",
    "type": "object",
    "properties": {
      "appKey": {
        "title": "appKey",
        "description": "Application Key from VTEX",
        "type": "string",
        "default": ""
      },
      "appToken": {
        "title": "appToken",
        "description": "Application Token from VTEX",
        "type": "string",
        "default": ""
      }
    }
  }
}
